<h1>Title: <%= @auction.title %></h1>
<p>Body: <%= @auction.body %></p>
<p>End Date: <%= @auction.end_date %></p>
<p>Reserve Price: $<%= @auction.reserve_price %></p>

<% if user_signed_in? %>
    <%= form_with(model: [@auction, @bid]) do |form|  %>
    <%#= form_for @bid do |form| %>
        <%= form.label :price %>
        <%= form.text_field :price %>

        <%= form.submit "Submit Bid" %>
    <% end %>
<% end %>

<% @bids.each do |bid| %>
    <p>$<%= bid.price %> on <%= bid.created_at %> by <%= @auction.user.first_name %> <%= @auction.user.last_name %> </p>

<% end %>